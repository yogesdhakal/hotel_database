<!DOCTYPE html>
<html>
  <head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>DAB Hotel System</title>
	<link rel="stylesheet" href="/stylesheets/base.css">
	<link rel="stylesheet" href="/stylesheets/login.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <%-include('./partials/navbar.ejs')%>
    <h2 class="p-3">Users</h2>
    <div class="list-group">
      <% users.forEach(function(user) { %>
        <div class="row px-3 py-1 w-100">
          <span class="col py-1 bg-info"><%=user.FirstName%><%=user.LastName%></span>
          <a href="/users/<%=user.id%>" class="col btn btn-secondary"> Details</a>
          <button class="btn-danger" onclick="deleteUser('http\:\/\/localhost:3000\/users', <%=JSON.stringify(user.id)%>)"> DELETE</button>
        </div>
        <br>
      <% }); %>
    </div>
    <script src="../javascripts/deleteUser.js"></script>
  </body>
</html>